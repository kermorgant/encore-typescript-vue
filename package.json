{
    "scripts": {
        "test:unit": "jest"
    },
    "devDependencies": {
        "@symfony/webpack-encore": "^0.22.2",
        "@types/jest": "^23.3.13",
        "@vue/test-utils": "^1.0.0-beta.29",
        "babel-jest": "^24.0.0",
        "html-webpack-plugin": "^3.2.0",
        "ts-jest": "^23.10.5",
        "ts-loader": "^5.3.0",
        "typescript": "^3.2.2",
        "vue-loader": "^15.4.2",
        "vue-template-compiler": "^2.5.21",
        "jest": "^23.4.2",
        "vue-jest": "^2.6.0"
    },
    "dependencies": {
        "vue": "^2.5.21"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "ts",
            "json",
            "vue"
        ],
        "modulePaths": [
            "<rootDir>/src",
            "<rootDir>/node_modules"
        ],
        "transform": {
            ".*\\.(vue)$": "vue-jest",
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleNameMapper": {
            "@/(.*)$": "<rootDir>/src/$1",
            "^vue$": "vue/dist/vue.common.js"
        }
    }
}
